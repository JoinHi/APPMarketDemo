<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_gallerychild_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/elevation_height"
    android:stateListAnimator="@anim/touch_raise"
    app:cardBackgroundColor="#ffffff"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="10dp"
    android:layout_width="130dp"
    android:layout_height="200dp">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:id="@+id/iv_appicon_tabfm"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/iv_more_tabfm"
                android:src="@android:drawable/ic_btn_speak_now"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_appname_tabfm"
                android:textColor="#000000"
                android:text="呆萌小怪物11111111"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:text="免费"
                android:textSize="12dp"
                android:textColor="#689F39"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_score_tabfm"
                android:text="4.6分"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
